@page
@model RainIntesity.Pages.DispositivosModel
@{
    ViewData["Title"] = "Dispositivos";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-3">
        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["ErrorMessage"]
            </div>
        }
        <h4>Lista de Dispositivos</h4>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th style="text-align:center">Identificador</th>
                    <th style="text-align:center">Nome</th>
                    <th style="text-align:center">Fabricante</th>
                    <th style="text-align:center">Url</th>
                    <th style="text-align:center">Acessar</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Dispositivos != null && Model.Dispositivos.Count > 0)
                {
                    @foreach (var dispositivo in Model.Dispositivos)
                    {
                        <tr>
                            <td style="text-align:center">@dispositivo.identifier</td>
                            <td style="text-align:center">@dispositivo.description</td>
                            <td style="font-weight:bold;text-align:center">@dispositivo.manufacturer</td>
                            <td style="text-align:center"><a class="btn btn-sm btn-outline-light" onclick="acessarDispositivo"><i class="fa-solid fa-right-to-bracket"></i></a></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">Nenhum dispositivo encontrado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>