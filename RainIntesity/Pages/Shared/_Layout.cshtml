@{
    var page = Context.Request.RouteValues["page"]?.ToString() ?? "";
}
<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RainIntesity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RainIntesity.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow">
            <div class="container">
                <h5 class="card-title text-center mb-0" style="color:#fff"><i class="fa-solid fa-cloud-moon-rain me-1"></i>RainIntesity</h5>
            </div>
            <div class="d-flex">
                <form id="logoutForm" asp-page="/Logout" method="post" class="form-inline">
                    <button type="submit" class="btn btn-outline-light me-2">Sair</button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Menu Lateral -->
            <nav id="menuLateral" class="col-md-2 d-none d-md-block bg-dark sidebar">
                <div class="sidebar-sticky" style="height: 98vh;padding: 20px 0; display: flex; flex-direction: column;">
                    <div class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5"><i class="fa-solid fa-gauge me-3"></i>Dashboard</span>
                    </div>
                    <ul class="nav flex-column mt-3">
                        <li class="nav-item">
                            <a class="nav-link @(page == "Dispositivos" ? "active text-white" : "text-white")" href="@Url.Page("Dispositivos")">
                                <span data-feather="home"></span>
                                <i class="fas fa-home me-2"></i>Home <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(page == "GerenciarDisp" ? "active text-white" : "text-white")" href="@Url.Page("GerenciarDisp")">
                                <span data-feather="file"></span>
                                <i class="fas fa-gear me-2"></i>Dispositivos
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Conteúdo -->
            <main role="main" class="col-md-10 ml-md-auto px-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>